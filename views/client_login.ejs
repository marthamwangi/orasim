<%- include('globals/head', { title: 'Client | Login' }); %>

  <body>
    <!-- Navbar-->

    <main>
      <div class="container">
        <div class="form_wrapper">
          <div class="form_container">
            <div class="title_container">
              <h2>PORES Clients Login Form</h2>
            </div>
            <div class="row clearfix" style="align-items: center">
              <!-- For Demo Purpose -->
              <div class="col-md-5 pr-lg-5 mb-5 mb-md-0">
                <img src="/img/home.svg" alt="" class="img-fluid mb-3 d-none d-md-block">
                <h2 style="text-align: start;">Welcome Back!</h2>

                <p class="font-italic text-muted mb-0">
                  It's nice to see you again. <br>
                  Login to continue to your Account
                </p>
                <p class="font-italic text-muted">Go back to <a href="/" class="text-muted">
                    <u>PORES</u></a>
                </p>
              </div>
              <div class="col-md-5 pr-lg-5 mb-5 mb-md-0">

                <% if(typeof error !='undefined' ) { %>
                  <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    <%= error %>
                      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                  </div>
                  <% } %>
                    <form action="" method="POST">
                      <div class="input_field"> <span><i aria-hidden="true" class="bi bi-envelope"></i></span>
                        <input type="email" name="email" placeholder="Email" required />
                      </div>
                      <div class="input_field"> <span><i aria-hidden="true" class="bi bi-lock"></i></span>
                        <input type="password" id="passInput" name="password" placeholder="Password" required />
                        <span toggle="#password-field" class="bi bi-eye field-icon toggle-password"></span>
                      </div>
                      <input class="button" style="background-color: #BC6C25" type="submit" value="Login" />
                    </form>
                    <!-- Already Registered -->
                    <div class="text-center w-100">
                      <p class="text-muted font-weight-bold">Don't have an account? <a href="/client/register"
                          class="text-login ml-2">Sign up</a> here</p>
                    </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      </div>
    </main>
    <%- include('globals/footer'); %>
