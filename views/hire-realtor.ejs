<%- include('globals/head', { title: 'HIRE REALTOR' }); %>
  <!-- ========== HEADER ========== -->
  <%- include('globals/header') %>
    <!-- ========== END HEADER ========== -->
    <style>
      .bootstrap-tagsinput {
        width: 100%;
        height: 50px;
      }

      .label-info {
        background-color: rgb(96, 108, 56)
      }

      .label {
        display: inline-block;
        padding: .25em .4em;
        font-size: 75%;
        font-weight: 700;
        line-height: 1;
        text-align: center;
        white-space: nowrap;
        vertical-align: baseline;
        border-radius: .25rem;
        transition: color .15s ease-in-out, background-color .15s ease-in-out,
          border-color .15s ease-in-out, box-shadow .15s ease-in-out;
      }
    </style>
    <!-- ========== MAIN CONTENT ========== -->
    <main id="content" role="main">
      <!-- Content -->
      <!-- Form Card -->
      <div class="container content-space-2 content-space-lg-3">
        <div class="w-lg-75 mx-lg-auto">
          <!-- Heading -->
          <div class="text-center mb-7">
            <h1 class="card-title">Hire Me</h1>
            <p class="card-text">Please fill out as much information as you can so that I can evaluate how well I can
              work with your requirements.</p>
          </div>
          <!-- End Heading -->

          <!-- Card -->
          <div class="card card-bordered shadow-none">
            <div class="card-body">
              <!-- Form -->
              <form action="" method="post" id="hireform">
                <!-- Form -->
                <div class="row mb-3">
                  <label for="propertySpecialtyLabel" class="col-sm-3 col-form-label form-label">Looking
                    for:</label>

                  <div class="col-sm-9">
                    <!-- Select -->
                    <select class="form-select form-select-lg" id="propertySpecialtyLabel" required name="specialty">
                      <option value="Buyer Agent">Buyer Agent</option>
                      <option value="Seller Agent">Seller Agent</option>
                      <option value="Lease Agent">Lease Agent</option>
                      <option value="Seller & Lease Agent">Seller & Lease Agent</option>
                      <option value="Relocation Agent">Relocation Agent</option>
                      <option value="Property Manager">Property Manager</option>
                      <option value="Valuer">Valuer</option>
                      <option value="Caretaker">Caretaker</option>
                    </select>
                    <!-- End Select -->
                  </div>
                </div>
                <link rel='stylesheet'
                  href='https://cdn.jsdelivr.net/bootstrap.tagsinput/0.8.0/bootstrap-tagsinput.css'>

                <!-- End Form -->
                <!-- Form -->
                <div class="row mb-3">
                  <label for="propertyLocationLabel" class="col-sm-3 col-form-label form-label">Region:</label>
                  <div class="col-sm-9">
                    <!-- tag -->
                    <input type="text" value="Enter a place folowed by a comma" data-role="tagsinput" name="region"
                      class="form-control my-auto" />
                    <!-- End tag -->
                  </div>
                </div>
                <!-- End Form -->
                <!-- Form -->
                <div class="row mb-3">
                  <label for="propertyCategoryLabel" class="col-sm-3 col-form-label form-label">Property Type:</label>

                  <div class="col-sm-9">
                    <!-- Select -->
                    <select class="form-select form-select-lg" id="propertyCategoryLabel" required name="propertyType">
                      <option value="House">House</option>
                      <option value="Flat">Flat</option>
                      <option value="Apartment">Apartment</option>
                      <option value="Multi-family">Multi-family</option>
                      <option value="Farm/Land">Farm/Land</option>
                      <option value="Commercial">Commercial</option>
                    </select>
                    <!-- End Select -->
                  </div>
                </div>
                <!-- End Form -->
                <!-- Form -->
                <div class="row mb-3">
                  <label for="propertyBedrooms" class="col-sm-3 col-form-label">Bedrooms:</label>
                  <div class="col-sm-9">
                    <div class="mb-4">
                      <label for="bedsLabelMoreFilters" class="form-label">Beds</label>

                      <!-- Select -->
                      <select id="bedsLabelMoreFilters" class="js-select form-select" data-hs-tom-select-options='{
                                                                            "hideSearch": true
                                                                          }' name="beds">
                        <option value="any" selected>Any</option>
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5+">5+</option>
                      </select>
                      <!-- End Select -->
                    </div>
                    <!-- End Col -->
                  </div>
                </div>
                <div class="row mb-3">
                  <label for="propertyBathrooms" class="col-sm-3 col-form-label">Bathrooms:</label>
                  <div class="col-sm-9">
                    <div class="mb-4">
                      <label for="bathLabelMoreFilters" class="form-label">Baths</label>

                      <!-- Select -->
                      <select id="bathLabelMoreFilters" class="js-select form-select" data-hs-tom-select-options='{
                                                                            "hideSearch": true
                                                                          }' name="baths">
                        <option value="any" selected>Any</option>
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5+">5+</option>
                      </select>
                      <!-- End Select -->
                    </div>
                    <!-- End Col -->
                    <!-- End Col -->

                  </div>
                </div>
                <!-- End Form -->

                <!-- Form -->

                <div class="row mb-3">
                  <label for="propertyPriceLabel" class="col-sm-3 col-form-label form-label">Price | Budget</label>
                  <div class="col-sm-9">
                    <div class="row justify-content-center">
                      <div class="col">
                        <span class="d-block small mb-1">Min price:</span>
                        <div class="input-group mb-3">
                          <span class="input-group-text">KSH</span>
                          <input type="number" min="0.00" step="100.00" class="form-control" placeholder=" 0.00"
                            value="0.00" name="minPrice">
                        </div>
                      </div>
                      <!-- End Col -->

                      <div class="col">
                        <span class="d-block small mb-1">Max price:</span>
                        <div class="input-group mb-3">
                          <span class="input-group-text">KSH</span>
                          <input type="number" min="0.00" step="100.00" class="form-control" placeholder="0.00"
                            value="0.00" name="maxPrice">
                        </div>
                      </div>
                      <!-- End Col -->
                    </div>
                    <!-- End Row -->

                  </div>
                </div>
                <!-- End Form -->
                <!-- Form-->
                <div class="row mb-3">
                  <label class="col-sm-3 col-form-label form-label">Detailed description</label>

                  <div class="col-sm-9">
                    <textarea class="form-control" aria-label="With textarea" name="description" maxlength="250"
                      rows="4"></textarea>
                  </div>
                </div>
                <!-- End Form-->
                <div class="text-center mt-5">
                  <button type="submit" class="btn btn-primary btn-lg">Hire me</button>
                </div>
              </form>
              <!-- End Form -->
              <!--success modal-->
              <%if(typeof msg !=='undefined' ) {%>
                <div class="modal fade show" id="welcomeMessageModal" tabindex="-1" aria-modal="true" role="dialog"
                  style="display: block; padding-left: 0px;">
                  <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                      <!-- Header -->
                      <div class="modal-close">
                        <button type="button" class="btn btn-ghost-secondary btn-icon btn-sm" data-bs-dismiss="modal"
                          aria-label="Close">
                          <i class="bi-x-lg"></i>
                        </button>
                      </div>
                      <!-- End Header -->

                      <!-- Body -->
                      <div class="modal-body p-sm-5">
                        <div class="text-center">
                          <div class="w-75 w-sm-50 mx-auto mb-4">
                            <img class="img-fluid" src="/img/hire-verification.svg" alt="Image Description"
                              data-hs-theme-appearance="default">

                          </div>

                          <h4 class="h1">Realtor Hired</h4>

                          <p>We are happy to see you chose to transact with PORES.</p>
                        </div>
                      </div>
                      <!-- End Body -->

                      <!-- Footer -->
                      <div class="modal-footer d-block text-center py-sm-5">
                        <div class="w-85 mx-auto">
                          <div class="row justify-content-between">
                            <div class="col">
                              <a href="/"><img class="img-fluid" src="/img/pores_logo.png" alt="Image Description"></a>
                            </div>
                          </div>
                        </div>
                      </div>
                      <!-- End Footer -->
                    </div>
                  </div>
                </div>
                <div class="modal-backdrop fade show"></div>
                <%}%>
                  <!--end success modal-->
            </div>
          </div>
          <!-- End Card -->
        </div>
      </div>
      <!-- End Form Card -->


    </main>
    <!-- ========== END MAIN CONTENT ========== -->
    <%- include('globals/footer'); %>

      <!-- JS Implementing Plugins -->
      <script src="/js/vendor.min.js"></script>

      <!-- JS Front -->
      <script src="/js/theme.min.js"></script>


      <!-- JS Plugins Init. -->
      <script>
        (function () {
          // INITIALIZATION OF MEGA MENU
          // =======================================================
          new HSMegaMenu('.js-mega-menu', {
            desktop: {
              position: 'left'
            }
          })


          // INITIALIZATION OF BOOTSTRAP VALIDATION
          // =======================================================
          HSBsValidation.init('.js-validate', {
            onSubmit: data => {
              data.event.preventDefault()
              alert('Submited')
            }
          })


          // INITIALIZATION OF BOOTSTRAP DROPDOWN
          // =======================================================
          HSBsDropdown.init()


          // INITIALIZATION OF GO TO
          // =======================================================
          new HSGoTo('.js-go-to')


          // INITIALIZATION OF QUILLJS EDITOR
          // =======================================================
          HSCore.components.HSQuill.init('.js-quill')


          // INITIALIZATION OF DROPZONE
          // =======================================================
          HSCore.components.HSDropzone.init('.js-dropzone')
        })()
      </script>
      <script src='https://cdn.jsdelivr.net/bootstrap.tagsinput/0.8.0/bootstrap-tagsinput.min.js'></script>
      </body>

      </html>
